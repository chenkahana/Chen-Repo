<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfo"
    android:orientation="vertical"
    android:background="@drawable/background"
    >

    <TextView
    android:id="@+id/userNameTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="User Name:"
    android:textColor="@android:color/black"
    android:padding="10dp"/>

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/userIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User ID:"
        android:textColor="@android:color/black"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/userIdEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/entityNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entity Name:"
        android:textColor="@android:color/black"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/entityNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/entityDmgTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entity Damage:"
        android:textColor="@android:color/black"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/entityDamageEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/entityMetIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entity MetID:"
        android:textColor="@android:color/black"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/entityMetIdEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return"
            android:drawableTop="@drawable/ic_back"
            android:onClick="returnToMain"
            android:textAllCaps="false"
            android:background="@drawable/roundedshape"
            />
    </LinearLayout>
</LinearLayout>

