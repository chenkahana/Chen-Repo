<log4net>
    <appender name="ConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
        <mapping>
          <level value="DEBUG" />
          <forecolor value="White" />
        </mapping>
        <mapping>
          <level value="INFO" />
          <forecolor value="Green" />
        </mapping>
        <mapping>
          <level value="WARN" />
          <forecolor value="Yellow" />
        </mapping>
        <mapping>
          <level value="ERROR" />
          <forecolor value="Red" />
        </mapping>
        <mapping>
          <level value="FATAL" />
          <forecolor value="Red" />
        </mapping>
        <layout type="log4net.Layout.PatternLayout">
          <conversionpattern value="%date{HH:mm:ss,fff} [%thread] %level - %message%newline" />
        </layout>
        <threshold value="INFO" />
      </appender>

  <appender name="PlainConsoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionpattern value="%date{HH:mm:ss,fff} [%thread] %level - %message%newline" />
    </layout>
  </appender>

  <appender name="TraceAppender" type="log4net.Appender.TraceAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionpattern value="%date{HH:mm:ss,fff} [%thread] %level - %message%newline" />
    </layout>
  </appender>

      <appender name="Bagira.AutoRefreshService.HostAppender" type="Bagira.Logging.LoggerFileAppender">
        <file value="IOS_Logs\Bagira.AutoRefreshService.Host.log"/>
        <datePattern value=".yyyy.MM.dd"/>
        <appendToFile value="true"/>
        <rollingStyle value="Date"/>
        <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
        <staticLogFileName value="true"/>
        <preserveLogFileNameExtension value="true"/>
        <maxSizeRollBackups value="-1"/>
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%date %a [%thread] %level %logger %message%newline"/>
        </layout>
        <threshold value="INFO" />
      </appender>

      <logger name="Bagira.AutoRefreshService.Host" additivity="false" >
        <appender-ref ref="ConsoleAppender"/>
        <appender-ref ref="Bagira.AutoRefreshService.HostAppender"/>
      </logger>

