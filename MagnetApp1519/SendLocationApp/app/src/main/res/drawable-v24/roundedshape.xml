
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" >
        <shape>
            <solid android:color="#707070"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#707070" />
            <corners android:bottomRightRadius="3px"
                android:bottomLeftRadius="3px"
                android:topRightRadius="3px"
                android:topLeftRadius="3px"
                android:padding="10dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <gradient android:startColor="#FFFFFF"
                android:endColor="#FF8400"
                android:angle="270" />
            <stroke
                android:width="3sp"
                android:color="#000000" />
            <corners android:bottomRightRadius="3px"
                android:bottomLeftRadius="3px"
                android:topRightRadius="3px"
                android:topLeftRadius="3px"
                android:padding="10dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient android:startColor="#FFFFFF"
                android:endColor="#FF8400"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#707070" />
            <corners android:bottomRightRadius="3px"
                android:bottomLeftRadius="3px"
                android:topRightRadius="3px"
                android:topLeftRadius="3px"
                android:padding="10dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#FF8400"
                android:endColor="#CC863F"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners android:bottomRightRadius="2px"
                android:bottomLeftRadius="2px"
                android:topRightRadius="2px"
                android:topLeftRadius="2px"
                android:padding="10dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>