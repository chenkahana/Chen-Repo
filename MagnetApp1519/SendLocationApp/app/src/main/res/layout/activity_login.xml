<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity"
    android:gravity="top"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="Register"
            android:textAlignment="textStart"
            android:gravity="center"
            tools:ignore="RtlCompat"
            android:background="@drawable/surface"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingStart="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="50sp"
            android:paddingLeft="30sp"
            android:paddingRight="30sp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hintColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/milIdEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="16sp"
                    android:inputType="number"
                    android:hint="Military ID"
                    android:focusedByDefault="false"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColor"
                    android:backgroundTint="@color/tint"
                    />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="10sp" />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hintColor">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:hint="Name"
            android:focusedByDefault="false"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"
            android:backgroundTint="@color/tint2"
            />

        </com.google.android.material.textfield.TextInputLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20sp" />


        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.button"
            android:text="Login"
            android:textSize="16sp"
            android:onClick="login"
            android:textAllCaps="false"
            android:background="@drawable/connect_button"
            />


        </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:text="version 4.1"
            />
</RelativeLayout>
</LinearLayout>

